<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"

             x:Class="OpravaMesta.ProblemsPage"
             xmlns:controls="clr-namespace:CarouselView.FormsPlugin.Abstractions;assembly=CarouselView.FormsPlugin.Abstractions"
             xmlns:opravaMesta="clr-namespace:OpravaMesta;assembly=OpravaMesta">
    <ContentView x:Name="bg">
        <StackLayout>
                <ActivityIndicator x:Name="activityIndicator"
                                   IsRunning="{Binding IsActivityIndicatorRunning}"
                                   VerticalOptions="CenterAndExpand"
                                   HorizontalOptions="CenterAndExpand"                               
                />
                <CarouselView ItemsSource="{Binding PostTemplate}" x:Name="CarouselView">
                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout BackgroundColor="Red">
                               <Label Text="{Binding Name}"></Label>
                                <Image Source="{Binding Image}"></Image>
                            </StackLayout>
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>
            </StackLayout>
        </ContentView>
</ContentPage>