<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OpravaMesta.DevTools">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Developer Flags" FontSize="Large"/>
            <Label Text="SERVER IP Overwrite:" />
            <Entry x:Name="DataPlaceholder" Placeholder="" />
            <Label Text="Db1Entery Overwrite:" />
            <Entry x:Name="RollingCodeSecret" Placeholder="" />
            <Button Clicked="StartApp" Text="Start app with flags"/>
            <Button Clicked="OTPChange" Text="Pernamently overwrite DB1Entery"/>
            <Button Clicked="GetCodeButton" Text="Show TOTP Code array"/>
            <Button Clicked="Crash" Text="Crash"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>